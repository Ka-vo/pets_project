{% extends 'base.html.twig' %}

{% block body %}
    <h1> {{ cat }} </h1>
    <div class="container">
        <div class="wrapper">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-40" src="{{ asset('images/images.jpeg') }}" alt="Первый слайд">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-40" src="{{ asset('images/images (1).jpeg') }}" alt="Второй слайд">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-40" src="{{ asset('images/images (2).jpeg') }}" alt="Третий слайд">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

{% endblock %}


